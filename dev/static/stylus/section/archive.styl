.archive
  background bunting
  display flex
  align-items center
  overflow-x hidden
  position relative

.archive__list
  width 100%
  max-width 100%
  display flex
  align-items center
  transition all .5s
  &.disable
    .archive__item
      &:before
        opacity 1
        visibility visible

.archive__item
  padding 50px 65px
  background url('../img/content/archive/bg.jpg') center no-repeat
  background-size cover
  border-radius standart-border-radius
  min-width 600px
  width 100%
  max-width 600px
  height 340px
  margin 0 75px
  position relative
  z-index 1
  &:before,&:after
    content ''
    display block
    width 100%
    height 100%
    border-radius standart-border-radius
    position absolute
    top 0
    left 0
    opacity 0
    visibility hidden
    @extend .trs
  &:before
    background-color rgba(black, .3)
    z-index 2
  &:after
    background-image linear-gradient(210.07deg, #60EAC9 3.69%, #EBAFF1 120.25%)
    z-index -1
  &:first-child
    margin-left 30%
  &.active
    min-width 730px
    height 410px
    &:after
      opacity .4
      visibility visible
    .archive__play
      opacity 1
      visibility visible
    .archive__img
      max-width 300px

.archive__play
  absolute-center()
  opacity 0
  cursor pointer
  visibility hidden
  @extend .trs
  .icon
    transform-origin center
    width 100px
    height 100px
    fill carnation
    @extend .trs
  &:hover
    .icon
      transform scale(1.1)

.archive__item-wrap
  display flex
  align-items flex-end
  height 100%

.archive__info
  margin-right 50px
  display flex
  flex-direction column
  height 100%

.archive__logo
  margin-bottom auto

.archive__title
  font-size 32px
  font-family font-montserrat
  font-weight 700
  letter-spacing -0.48px
  color white
  display block
  margin-bottom 35px
  text-transform uppercase

.archive__name
  font-family font-montserrat
  font-size 18px
  font-weight 700
  letter-spacing -0.36px
  line-height 24px

.archive__img
  flex none
  max-width 190px

.archive__lock
  z-index 3
  min-width 600px
  width 100%
  max-width 600px
  height 340px
  border-radius standart-border-radius
  display flex
  flex-direction column
  align-items center
  justify-content center
  // transition-delay .5s
  @extend .trs
  absolute-center()
  &.hide
    opacity 0
    visibility hidden

.archive__icon
  margin-bottom 35px
  .icon
    width 90px
    height 90px
    fill kournikova

.archive__text
  font-weight 600
  font-size 24px
  line-height 32px
  text-align center
  font-family font-montserrat
  margin-bottom 35px
  max-width 500px