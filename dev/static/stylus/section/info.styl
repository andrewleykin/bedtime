.info
  @media (max-width breakpoint-md)
    margin-bottom 100px

.info__wrap
  padding-top 150px
  padding-bottom 90px
  width 100%
  display flex
  justify-content space-between
  max-width 1164px
  margin 0 auto
  position relative
  z-index 2
  @media (max-width breakpoint-md)
    padding 0
    flex-direction column-reverse

.info__promo
  width 100%
  max-width 500px
  position relative
  color white
  @media (max-width breakpoint-md)
    margin 0 auto

.info__title
  color #ffffff
  font-size 32px
  font-weight 600
  line-height 32px
  margin-bottom 40px
  &--md
    display none
  @media (max-width breakpoint-md)
    display none
    font-size 24px
    line-height 30px
    text-align center
    &--md
      display block

.info__age
  margin-bottom 20px
  display flex
  align-items center
  @media (max-width breakpoint-md)
    justify-content center

.info__age-tab
  font-family font-montserrat
  font-size 18px
  font-weight 600
  line-height 24px
  display block
  padding 13px 30px
  cursor pointer
  border-radius 50px
  @extend .trs
  border 2px solid transparent
  &:hover
    color carnation
  &.active
    border-color kournikova
    &:hover
      color white
      cursor default

.info__age-wrap,
.info__language-wrap,
.info__group-wrap
  position relative

.info__age-wrap
  min-height 300px

.info__age-block
  width 100%
  position absolute
  top 0
  left 100px
  opacity 0
  visibility hidden
  transition all .2s linear
  &.trs-delay
    transition-delay .3s
  &.active
    opacity 1
    left 0
    visibility visible
  &.leave
    left -100px

.info__header
  display flex
  padding-bottom 40px
  margin-bottom 40px
  border-bottom 2px solid rgba(white, .2)
  z-index 2
  @media (max-width breakpoint-md)
    display block
    padding-bottom 30px
    max-width 320px
    margin 0 auto 20px

.info__header-title
  font-size 14px
  font-family font-lora
  margin-bottom 20px
  padding-left 20px

.info__header-active-text
  font-family font-montserrat
  font-size 14px
  font-weight 600

.info__language-wrap
  min-height 185px
  position relative
  z-index 1

.info__language
  display flex
  flex-direction column
  position relative
  &+&
    margin-left 40px
  @media (max-width breakpoint-md)
    &+&
      margin-left 0
      margin-top 25px

.info__language-block
  width 100%
  position absolute
  top 0
  left 100px
  opacity 0
  visibility hidden
  transition all .2s linear
  &.trs-delay
    transition-delay .3s
  &.active
    opacity 1
    left 0
    visibility visible
  &.leave
    left -100px

.info__language-active
  align-self flex-start
  display flex
  align-items center
  position relative
  cursor pointer
  background rgba(white, .1);
  border-radius 30px
  width 230px
  height 50px
  padding-left 25px
  &:after
    content ''
    display block
    position absolute
    top 20px
    right 17px
    width 8px
    height 8px
    border 2px solid transparent
    border-left-color white
    border-bottom-color white
    transform rotate(-45deg)
  @media (max-width breakpoint-lg)
    width 200px
  @media (max-width breakpoint-md)
    width 100%
    max-width 320px

.info__language-active-flag
  width 18px
  height 18px
  margin-right 8px
  border-radius 50%
  overflow hidden
  border 2px solid rgba(white, .2)
  position relative
  img 
    max-width 22px
    absolute-center()

.info__language-tabs
  position absolute
  padding 15px 0
  top 32px
  left 0
  right 0
  border-radius 16px
  background white
  @extend .trs
  z-index 2
  cursor pointer
  &:after
    content ''
    display block
    position absolute
    top 27px
    right 15px
    width 8px
    height 8px
    border 2px solid transparent
    border-left-color bunting
    border-top-color bunting
    transform rotate(45deg)
  &.hide
    opacity 0
    visibility hidden

.info__language-tabs-group-wrap
  display none
  &.active
    display block

.info__language-tab
  font-size 18px
  font-weight 600
  line-height 32px
  margin 0 25px
  cursor pointer
  color bunting
  @extend .trs
  &:hover
    color carnation
  &.active
    color carnation
    cursor default

.info__group-wrap
  min-height 170px

.info__group-block
  width 100%
  position absolute
  top 0
  left 100px
  opacity 0
  visibility hidden
  transition all .2s linear
  &.trs-delay
    transition-delay .3s
  &.active
    opacity 1
    left 0
    visibility visible
  &.leave
    left -100px

.info__group-tabs
  display flex
  align-items center
  border-bottom 2px solid rgba(white, .2)
  margin-bottom 25px
  padding-bottom 15px

.info__group-tab
  color #ffffff
  font-size 14px
  font-weight 700
  text-transform uppercase
  padding 10px 0
  cursor pointer
  @extend .trs
  &+&
    margin-left 40px
  &.active
    color kournikova

.ig__header
  display flex
  align-items center
  margin-bottom 40px
  .icon
    width 16px
    height 16px
    fill rgba(white, .5)
  @media (max-width breakpoint-md)
    margin-bottom 20px
    justify-content center

.ig__header-block
  display flex
  align-items center
  &+&
    margin-left 40px
  span
    font-size 14px
    font-weight 400
  @media (max-width breakpoint-md)
    flex-direction column
    align-items center

.ig__header-icon
  margin-right 10px
  @media (max-width breakpoint-md)
    margin-right 0
    margin-bottom 10px

.ig__text
  font-size 14px
  line-height 24px
  margin-bottom 40px

.ig__heading
  display flex
  margin-bottom 40px
  position relative
  z-index 2
  align-items center
  @media (max-width breakpoint-md)
    flex-direction column
    text-align center
    margin-bottom 30px

.ig__heading-pic
  margin-right 25px
  width 48px
  height 48px
  overflow hidden
  border-radius 50%
  position relative
  &:before
    content ''
    display block
    width 80px
    height 80px
    border-radius 50%
    background linear-gradient(230.92deg, rgba(96, 234, 201, 0.2) -15.12%, rgba(235, 175, 241, 0.2) 78.65%)
    position absolute
    top 0
    left 0
  @media (max-width breakpoint-md)
    margin-right 0
    margin-bottom 15px
    width 80px
    height 80px
    z-index 1
    display flex
    justify-content center
    align-items center
    img 
      width 72px
    &:before
      display block

.ig__heading-post
  font-family font-lora
  font-size 14px
  margin-bottom 10px
  display block

.ig__heading-name
  font-size 14px
  font-weight 700
  color white
  position relative

.ig__descr
  display flex
  flex-wrap wrap
  margin 0 -20px 55px

.ig__descr-block
  max-width 246px
  width 100%
  margin 0 20px 25px
  display flex
  align-items center
  position relative
  cursor pointer
  &.active
    z-index 100

.ig__descr-hide
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  display flex
  justify-content center
  align-items center
  opacity 0
  visibility hidden
  &.active
    opacity 1
    visibility visible

.ig__descr-overlay
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background rgba(black, .5)

.ig__descr-content
  background white
  padding 30px
  border-radius 30px
  color bunting
  z-index 2

.ig__descr-content-title
  font-family font-montserrat
  color bunting
  margin-bottom 50px
  text-align center
  font-size 32px
  line-height 32px
  font-weight 600

.ig__descr-icon
  margin-right 15px
  .icon
    width 32px
    height 32px
    fill white

.ig__excerpt-subtext
  position absolute
  opacity 0.5
  font-size 10px
  line-height 12px
  top 100%
  left 46px
  right 30px
  font-style italic

.ig__cost
  display flex
  align-items center
  @media (max-width breakpoint-md)
    justify-content center

.ig__cost-price
  color kournikova
  font-family font-montserrat
  font-size 24px
  font-weight 600
  display block
  margin-right 5px

.ig__cost-in,
.ig__cost-quality
  font-size 14px
  font-weight 700

.ig__cost-quality
  display block
  margin-left 5px
  opacity 0.5

.ig__cost-descr
  color rgba(white, .5)
  font-size 10px
  font-weight 400
  line-height 12px
  max-width 250px

.info__action
  margin-top 50px
  margin-bottom 20px
  @media (max-width breakpoint-md)
    margin-top 200px
    display flex
    justify-content center

.info__warning
  @media (max-width breakpoint-md)
    max-width 320px
    margin 0 auto

.info__warning-row
  display flex
  align-items center
  margin-bottom 10px

.info__warning-icon
  .icon
    width 14px
    height 14px
    fill rgba(white, .5)
    margin-right 10px

.info__warning-text
  font-size 16px
  line-height 24px
  font-weight 400
  @media (max-width breakpoint-md)
    font-size 14px

.info__warning-descr
  font-size 12px
  line-height 14px

.info__img
  @media (max-width breakpoint-md)
    max-width 245px
    margin 0 auto 35px