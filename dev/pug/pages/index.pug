extends ../layout/main

block variables
	- var title = 'Главная страница'

block content
	.parallax
		.top-banner__bg.hide(style="background-image: " + content.topBanner.bg.src)
		each item in content.topBanner.clouds
			.top-banner__bg-clouds(style="background-image: " + item["src"] class=item["class"])
		.parallax__clouds.parallax__clouds--1#parallax-1
			img(src="app/img/content/top-banner/parallax-cloud1.png", alt="parallax cloud", data-depth="0.2")
		.parallax__clouds.parallax__clouds--2#parallax-2
			img(src="app/img/content/top-banner/parallax-cloud2.png", alt="parallax cloud", data-depth="0.2")
	main.main
		include ../section/top-banner
		include ../section/about
		include ../section/info
		include ../section/review
		include ../section/faq
		include ../section/contacts