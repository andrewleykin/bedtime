.about
  overflow-x hidden
  &.slider-open
    overflow hidden
    z-index 999

.about__wrap
  color white
  padding 150px 0
  display flex
  justify-content center
  flex-direction column
  align-items center

.about__title
  max-width 590px
  text-align center
  font-family font-montserrat
  font-size 32px
  font-weight 600
  line-height 40px
  margin-bottom 25px

.about__subtitle
  font-family font-lora
  font-size 18px
  display block
  margin-bottom 45px

.about__text
  font-size 14px
  line-height 24px
  text-align center
  margin-bottom 75px
  max-width 580px

.about__advantage
  width 100%
  max-width 960px
  display flex
  flex-wrap wrap
  justify-content space-between
  margin 0 -60px
  margin-bottom 120px

.about__advantage-block
  width 100%
  max-width 200px
  display flex
  align-items center
  flex-direction column
  text-align center
  margin-left 60px
  margin-right 60px
  position relative
  &:nth-child(4)
    margin-left auto
  &:nth-child(5)
    margin-right auto
  &:hover
    z-index 10
    .about__advantage-name
      color bunting
    .about__advantage-text
      opacity 1
      visibility visible

.about__advantage-img
  margin-bottom 25px

.about__advantage-name
  font-family font-montserrat
  font-size 18px
  font-weight 600
  line-height 24px
  margin-bottom 20px
  width 100%
  max-width 180px
  @extend .trs

.about__advantage-text
  font-family font-open
  font-size 14px
  line-height 18px
  min-width 380px
  position absolute
  top -40px
  left -90px
  padding 200px 25px 40px
  background white
  color button-color-hover
  box-shadow 0px 4px 8px rgba(0, 0, 0, 0.2)
  border-radius 16px
  z-index -1
  opacity 0
  visibility hidden
  @extend .trs

.about__teachers
  margin-bottom 110px
  .about__title,
  .about__text
    text-align center
    margin-left auto
    margin-right auto
  .about__text
    max-width 600px

.about__teachers-slider
  margin-top 60px

.about__teachers-list
  max-width 100vw
  .slick-list
    overflow visible

.about__teachers-item
  padding 40px 30px
  text-align center
  border-radius 16px
  border 2px solid rgba(white, .2)
  max-width 260px
  margin 0 40px
  position relative
  height 280px
  &:hover
    z-index 10
    .about__teachers-name,
    .about__teachers-post
      color bunting
    .about__teachers-text
      opacity 1
      visibility visible

.about__teachers-img
  margin 0 auto 20px
  width 70px
  height 70px
  position relative
  img
    border-radius 50%
    width 70px
    height 70px
    overflow hidden
  &:before
    content ''
    display block
    width 78px
    height 78px
    z-index -1
    top -4px
    left -4px
    position absolute
    border-radius 50%
    background linear-gradient(230.92deg, rgba(96, 234, 201, 0.2) -15.12%, rgba(235, 175, 241, 0.2) 78.65%)

.about__teachers-name
  margin 0 auto 15px
  font-size 18px
  line-height 24px
  font-family font-montserrat
  max-width 130px
  @extend .trs

.about__teachers-post
  font-size 14px
  line-height 20px
  font-family font-lora
  @extend .trs

.about__teachers-text
  font-family font-open
  font-size 12px
  line-height 18px
  position absolute
  top 0
  left -60px
  min-width 380px
  padding 260px 25px 40px
  background white
  color button-color-hover
  box-shadow 0px 4px 8px rgba(0, 0, 0, 0.2)
  border-radius 16px
  z-index -1
  opacity 0
  visibility hidden
  @extend .trs

.about__teachers-arrow
  width 64px
  height 64px
  background rgba(bunting, .5)
  border-radius 50%
  position relative
  @extend .trs
  cursor pointer
  position absolute
  top 50%
  transform translateY(-50%)
  z-index 10
  &:hover
    background carnation
  &:after
    content ''
    display block
    width 12px
    height 12px
    border 2px solid transparent
    border-right-color kournikova
    border-bottom-color kournikova
    position absolute
    top 50%
    left 48%
    transform translate(-50%, -50%) rotate(-45deg)
  &--prev
    left 40px
    transform translateY(-50%) rotate(180deg)
  &--next
    right 40px
  &.slick-disabled
    opacity 0
    visibility hidden

.about__example
  width 100%
  .about__title
    margin 0 auto 40px

.about__example-tabs
  display flex
  align-items center
  justify-content center
  margin-bottom 60px

.about__example-tab
  font-family font-montserrat
  font-size 18px
  font-weight 600
  line-height 24px
  display block
  padding 13px 30px
  cursor pointer
  border-radius 50px
  @extend .trs
  border 2px solid transparent
  &:hover
    background-color carnation
  &.active
    border-color kournikova
    &:hover
      background-color transparent
      cursor default

.about__example-block
  opacity 0
  visibility hidden
  transform translateX(100px)
  @extend .trs
  &.trs-delay
    transition-delay .3s
  &.active
    opacity 1
    transform translateX(0px)
    visibility visible
  &.leave
    transform translateX(-100px)

.aev__list
  display flex
  justify-content space-between
  max-width 1130px
  margin 0 auto

.aev__content
  display none

.aev__img
  position relative
  cursor pointer
  &:hover
    .icon
      width 80px
      height 80px
  .icon
    fill carnation
    width 66px
    height 66px
    @extend .trs
    absolute-center()

.aev__logo
  position absolute
  left 20px
  top 20px
  max-width 80px

.aev__name
  position absolute
  left 20px
  bottom 20px
  font-size 18px
  font-family font-montserrat

.aep
  margin-top -200px

.aep__list
  display flex
  justify-content space-between
  width 100%
  max-width 1130px
  margin 0 auto

.aep__item
  overflow hidden
  border-radius 16px
  img
    @extend .trs
  &:hover
    img
      transform scale(1.1)
      transform-origin center

.aep__col
  width 100%
  max-width 400px
  &:first-child
    max-width 250px
  .aep__item+.aep__item
    margin-top 40px

.aep__slider
  max-width 926px
  margin 0 auto
  .aep__item
    display flex
    justify-content center
    align-items center
    min-height 400px
    &:hover
      img
        transform none

[data-remodal-id="slider"]
  background transparent
  max-width 100%