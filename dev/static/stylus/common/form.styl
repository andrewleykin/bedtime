.form__row
  display flex
  margin 35px 0

.form__col
  width 50%
  &+&
    margin-left 30px

.form__group
  position relative
  &+&
    margin-top 35px
  &--textarea
    margin-top 45px
  &.invalid
    .form__input
      border-bottom-color carnation

.form__input
  background transparent
  padding-bottom 15px
  border-bottom 2px solid rgba(white, .3)
  font-family font-open
  font-size 14px
  font-weight 700
  color white
  width 100%
  cursor pointer
  &:focus
    & + .form__label
      opacity 0

.form__label
  font-family font-open
  font-size 14px
  font-weight 700
  position absolute
  left 0
  bottom 18px
  cursor pointer
  @extend .trs
  &.hide
    opacity 0

.form__textarea
  height 100px
  border-radius 8px
  background transparent
  border 2px solid rgba(white, .3)
  padding 10px 15px
  color white
  font-family font-open
  font-size 14px
  font-weight 400
  line-height 24px
  width 100%
  cursor pointer
  &::placeholder
    color white

.form__action
  margin-top 30px
  display flex
  justify-content center
  &--order
    margin-top 50px

.form__select
  background transparent
  padding-left 0
  padding-bottom 15px
  border-bottom 2px solid rgba(white, .3)
  font-family font-open
  font-size 14px
  font-weight 700
  color white
  width 100%
  cursor pointer

.form__option
  background bunting
  cursor pointer
  height 20px

.form__sublabel
  font-family font-open
  font-size 10px
  line-height 12px
  position absolute
  left 0
  top -15px
  &--other
    top 40px

.form__dont-required
  opacity 0.5
  font-family font-open
  font-style italic
  font-size 10px
  line-height 12px
  position absolute
  right 0
  top 40px