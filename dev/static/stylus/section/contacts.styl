.contacts
  background bunting
  padding 170px 0 90px

.contacts__wrap
  max-width 1131px
  margin 0 auto
  display flex
  justify-content space-between
  position relative
  z-index 2

.contacts__title
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 70px

.contacts__content
  padding-bottom 55px
  max-width 500px
  border-bottom 2px solid rgba(white, .2)

.contacts__link-block
  display flex
  .icon
    width 22px
    height 22px
    fill white
    margin-right 35px
  &+&
    margin-top 50px

.contacts__link
  font-size 18px
  font-family font-montserrat
  font-weight 600
  color #fff
  margin-right 10px
  &:hover
    text-decoration underline

.contacts__link-apps
  align-self center
  color rgba(255, 255, 255, 0.5)

.contacts__social
  margin-top 45px
  display flex
  align-items center

.contacts__social-title
  font-family font-lora
  font-size 18px
  display block
  margin-right 30px

.contacts__social-list
  display flex
  align-items center

.contacts__social-item
  &+&
    margin-left 25px

.contacts__social-link
  width 64px
  height 64px
  background-color kournikova
  border-radius 50%
  display flex
  align-items center
  justify-content center
  @extend .trs
  &:hover
    opacity .8
  .icon
    width 24px
    height 24px
    fill carnation

.contacts__connect
  max-width 440px
  width 100%
  margin-left 10px
  align-self flex-start
  border-radius standart-border-radius
  background-color rgba(white, .1)
  padding 34px 64px 32px

.contacts__connect-title
  text-align center
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 20px

.contacts__connect-subtitle
  font-family font-lora
  font-size 14px
  font-weight 400
  line-height 20px
  display block
  text-align center
  max-width 260px
  margin 0 auto 30px