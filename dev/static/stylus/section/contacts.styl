.contacts
  padding 170px 0 90px
  @media (max-width breakpoint-md)
    padding 0

.contacts__wrap
  max-width 1131px
  margin 0 auto
  display flex
  justify-content space-between
  position relative
  z-index 2
  @media (max-width breakpoint-md)
    display block

.contacts__info
  @media (max-width breakpoint-md)
    margin-bottom 65px

.contacts__title
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 70px
  @media (max-width breakpoint-md)
    text-align center
  @media (max-width breakpoint-sm)
    max-width 260px
    margin-left auto
    margin-right auto

.contacts__content
  padding-bottom 55px
  max-width 500px
  border-bottom 2px solid rgba(white, .2)
  @media (max-width breakpoint-lg)
    padding-bottom 30px
  @media (max-width breakpoint-md)
    padding-bottom 40px
    max-width 200px
    margin 0 auto

.contacts__link-block
  display flex
  &:before
    content ''
    width 78px
    height 78px
    background linear-gradient(230.92deg, rgba(96, 234, 201, 0.2) -15.12%, rgba(235, 175, 241, 0.2) 78.65%)
    border-radius 50%
    position absolute
    left 50%
    transform translateX(-50%)
    top -27px
    display none
  .icon
    width 22px
    height 22px
    fill white
    margin-right 35px
  &+&
    margin-top 50px
  @media (max-width breakpoint-lg)
    .icon
      width 16px
      height 16px
      margin-right 20px
    &+&
      margin-top 20px
  @media (max-width breakpoint-md)
    flex-direction column
    align-items center
    justify-content center
    position relative
    &:before
      display block
    .icon
      width 22px
      height 22px
      margin-bottom 50px
      margin-right 0
    &+&
      margin-top 70px

.contacts__link
  font-size 18px
  font-family font-montserrat
  font-weight 600
  color #fff
  margin-right 10px
  &:hover
    text-decoration underline
  @media (max-width breakpoint-md)
    font-size 16px
    margin-bottom 10px
    margin-right 0

.contacts__link-apps
  align-self center
  color rgba(255, 255, 255, 0.5)
  @media (max-width breakpoint-md)
    font-size 12px

.contacts__social
  margin-top 45px
  display flex
  align-items center
  @media (max-width breakpoint-lg)
    margin-top 25px
  @media (max-width breakpoint-md)
    margin-top 40px
    flex-direction column
    text-align center

.contacts__social-title
  font-family font-lora
  font-size 18px
  display block
  margin-right 30px
  @media (max-width breakpoint-md)
    margin-right 0
    margin-bottom 40px
    font-size 16px

.contacts__social-list
  display flex
  align-items center

.contacts__social-item
  &+&
    margin-left 25px
  @media (max-width breakpoint-md)
    &+&
      margin-left 50px

.contacts__social-link
  width 64px
  height 64px
  background-color kournikova
  border-radius 50%
  display flex
  align-items center
  justify-content center
  @extend .trs
  &:hover
    opacity .8
  .icon
    width 24px
    height 24px
    fill carnation
  @media (max-width breakpoint-lg)
    width 32px
    height 32px
    .icon
      width 12px
      height 12px
  @media (max-width breakpoint-md)
    width 64px
    height 64px
    .icon
      width 24px
      height 24px

.contacts__connect
  max-width 440px
  width 100%
  margin-left 10px
  align-self flex-start
  border-radius standart-border-radius
  background-color rgba(white, .1)
  padding 34px 64px 32px
  @media (max-width breakpoint-lg)
    max-width 320px
    padding 17px 32px 16px
  @media (max-width breakpoint-md)
    max-width 375px
    padding 30px 40px 30px
    margin 0 auto
  @media (max-width breakpoint-sm)
    width calc(100% + 40px)
    margin-left -20px

.contacts__connect-title
  text-align center
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 20px

.contacts__connect-subtitle
  font-family font-lora
  font-size 14px
  font-weight 400
  line-height 20px
  display block
  text-align center
  max-width 260px
  margin 0 auto 30px