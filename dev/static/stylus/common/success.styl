.success
  display flex
  flex-direction column
  justify-content center
  text-align center
  height 100vh
  max-height 490px

.success__icon
  width 100px
  height 100px
  border-radius 50%
  background-color kournikova
  display flex
  justify-content center
  align-items center
  margin 0 auto 45px
  svg
    fill carnation
    width 40px
    height 40px

.success__title
  font-size 24px
  line-height 28px
  margin-bottom 30px
  font-family font-montserrat
  font-weight 600

.success__text
  font-size 14px
  line-height 24px
  font-family font-open
  font-weight bold
  max-width 306px
  margin 0 auto