.review
  padding-top 200px
  padding-bottom 120px
  @media (max-width breakpoint-md)
    padding 0
    margin-bottom 200px

.review__wrap
  width 100%
  max-width 730px
  height 400px
  margin 0 auto
  position relative
  display flex
  align-items center
  justify-content center
  flex-direction column
  text-align center
  padding 0 100px
  z-index 1
  @media (max-width breakpoint-md)
    max-width 100%
    display block
    height auto
    padding 0 90px
  @media (max-width breakpoint-sm)
    padding 0 30px

.review__title
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 90px
  text-align center
  display none
  transform translateY(-20px)
  @media (max-width breakpoint-md)
    display block

.review__border
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index -1
  .icon
    width 100%
    height 100%
    fill rgba(white, .1)
  @media (max-width breakpoint-md)
    display none
  
.review__border-md
  display none
  position absolute
  top 45px
  left 0
  right 0
  bottom -50px
  z-index -1
  .icon
    width 100%
    height 100%
    fill rgba(white, .1)
  @media (max-width breakpoint-md)
    display block

.review__icon
  position absolute
  top -18px
  left 50%
  transform translateX(-50%)
  .icon
    width 40px
    height 27px
    fill rgba(white, .5)
  @media (max-width breakpoint-md)
    top 35px
    .icon
      width 33px

.review__content
  max-width 100%
  p
    font-size 18px
    line-height 30px
  @media (max-width breakpoint-md)
    p
      font-size 14px
      line-height 24px

.review__item
  height 100%

.review__users
  position absolute
  left 50%
  transform translateX(-50%)
  bottom -87px
  display flex
  max-width 220px
  @media (max-width breakpoint-md)
    bottom -135px

.review__user
  width 40px
  height 180px
  opacity .5
  position relative
  margin 0 25px
  cursor pointer
  transition opacity .2s
  transition all .2s ease-in-out
  &:before
    content ''
    display block
    opacity 0
    width 0
    height 0
    border-radius 50%
    background rgba(white, .1)
    absolute-center()
    @extend .trs
  &:hover
    opacity 1
  img
    border-radius 50%
    overflow hidden
    width 100%
    height 40px
    absolute-center()
  &.slick-center
    opacity 1
    img
      min-width 70px
      height 70px
    &:before
      opacity 1
      width 76px
      height 76px
    .review__user-info
      opacity 1
      visibility visible

.review__user-info
  position absolute
  bottom 2px
  min-width 200px
  left 50%
  transform translateX(-50%)
  opacity 0
  visibility hidden
  @extend .trs

.review__user-name
  display block
  margin-bottom 10px
  font-family font-montserrat
  font-weight 600
  font-size 18px

.review__user-city
  font-family font-lora
  font-style italic
  font-size 14px