.about
  overflow-x hidden
  &.slider-open
    overflow hidden
    z-index 999
  @media (max-width breakpoint-md)
    margin-bottom 80px

.about__wrap
  color white
  padding 150px 0
  display flex
  justify-content center
  flex-direction column
  align-items center
  @media (max-width breakpoint-md)
    padding 0

.about__title
  max-width 590px
  text-align center
  font-family font-montserrat
  font-size 32px
  font-weight 600
  line-height 40px
  margin-bottom 25px
  @media (max-width breakpoint-md)
    font-size 24px
    line-height 30px
    max-width 330px

.about__subtitle
  font-family font-lora
  font-size 18px
  display block
  margin-bottom 45px
  @media (max-width breakpoint-md)
    font-size 16px
    margin-bottom 30px

.about__text
  font-size 14px
  line-height 24px
  text-align center
  margin-bottom 75px
  max-width 580px
  @media (max-width breakpoint-md)
    max-width 330px
    margin-bottom 50px
    font-size 12px
    line-height 20px

.about__advantage
  width 100%
  max-width 960px
  display flex
  flex-wrap wrap
  justify-content space-between
  margin 0 -60px 120px
  @media (max-width breakpoint-md)
    width calc(100% + 40px)
    margin 0 -20px 80px

.about__advantage-block
  width 100%
  max-width 200px
  display flex
  align-items center
  flex-direction column
  text-align center
  margin-left 60px
  margin-right 60px
  position relative
  &:first-child
    .about__advantage-name
      max-width 190px
  &:nth-child(4)
    margin-left auto
  &:nth-child(5)
    margin-right auto
  &:hover
    z-index 10
    .about__advantage-name
      color bunting
    .about__advantage-text
      opacity 1
      visibility visible
  @media (max-width breakpoint-md)
    position relative
    width 100%
    max-width 190px
    margin 0
    &:nth-child(4)
      margin-left 0
    &:nth-child(5)
      margin-right 0
    &:hover
      .about__advantage-name
        color white
      .about__advantage-text
        opacity 0
        visibility hidden
    &.slick-active
      .about__advantage-img
        opacity 1
      .about__advantage-name,
      .about__advantage-text
        opacity 1
        visibility visible

.about__advantage-img
  margin-bottom 25px
  @media (max-width breakpoint-md)
    display flex
    justify-content center
    opacity .5

.about__advantage-name
  font-family font-montserrat
  font-size 18px
  font-weight 600
  line-height 24px
  margin-bottom 20px
  width 100%
  max-width 180px
  @extend .trs
  @media (max-width breakpoint-md)
    font-size 16px
    line-height 20px
    display block
    max-width 150px
    margin 0 auto 25px
    opacity 0
    visibility hidden

.about__advantage-text
  font-family font-open
  font-size 14px
  line-height 18px
  min-width 380px
  position absolute
  top -40px
  left -90px
  padding 200px 25px 40px
  background white
  color button-color-hover
  box-shadow 0px 4px 8px rgba(0, 0, 0, 0.2)
  border-radius 16px
  z-index -1
  opacity 0
  visibility hidden
  @extend .trs
  @media (max-width breakpoint-md)
    color white
    font-size 12px
    line-height 18px
    position relative
    top unset 
    left unset
    padding 0
    background none
    box-shadow none
    z-index 0
    border-radius 0
    min-width auto
    width calc(100% + 80px)
    margin-left -40px
    transition-duration .4s

.about__teachers
  margin-bottom 110px
  .about__title,
  .about__text
    text-align center
    margin-left auto
    margin-right auto
  .about__text
    max-width 600px
    padding 0 20px
  @media (max-width breakpoint-md)
    margin-bottom 80px
    .about__text
      margin-bottom 40px

.about__teachers-list
  max-width 100vw
  .slick-list
    overflow visible

.about__teachers-item
  padding 40px 30px
  text-align center
  border-radius 16px
  border 2px solid rgba(white, .2)
  max-width 260px
  margin 0 40px
  position relative
  height 280px
  &:hover
    z-index 10
    .about__teachers-name,
    .about__teachers-post
      color bunting
    .about__teachers-text
      opacity 1
      visibility visible
  &:nth-child(3)
    .about__teachers-name
      max-width 100px
  &:nth-last-child(-n+2)
    .about__teachers-name
      max-width 180px
  @media (max-width breakpoint-md)
    min-width 220px
    margin 0 20px
    cursor pointer
    &:hover
      z-index 10
      .about__teachers-name,
      .about__teachers-post
        color white
    .about__teachers-more
      opacity 1
      visibility visible


.about__teachers-img
  margin 0 auto 20px
  width 70px
  height 70px
  position relative
  img
    border-radius 50%
    width 70px
    height 70px
    overflow hidden
  &:before
    content ''
    display block
    width 78px
    height 78px
    z-index -1
    top -4px
    left -4px
    position absolute
    border-radius 50%
    background linear-gradient(230.92deg, rgba(96, 234, 201, 0.2) -15.12%, rgba(235, 175, 241, 0.2) 78.65%)

.about__teachers-name
  margin 0 auto 15px
  font-size 18px
  line-height 24px
  font-family font-montserrat
  max-width 130px
  @extend .trs
  @media (max-width breakpoint-md)
    font-size 16px
    line-height 20px

.about__teachers-post
  font-size 14px
  line-height 20px
  font-family font-lora
  @extend .trs
  @media (max-width breakpoint-md)
    display block
    margin-bottom 20px

.about__teachers-more
  display none
  width 8px
  height 8px
  border 1px solid transparent
  border-bottom-color carnation
  border-left-color carnation
  position absolute
  left 50%
  transform translateX(-50%) rotate(-45deg)
  bottom 20px
  &.active
    transform translateX(-50%) rotate(135deg)
  @media (max-width breakpoint-md)
    display block
    opacity 0
    visibility hidden

.about__teachers-text
  font-family font-open
  font-size 12px
  line-height 18px
  position absolute
  top 0
  left -60px
  min-width 380px
  padding 260px 25px 40px
  background white
  color button-color-hover
  box-shadow 0px 4px 8px rgba(0, 0, 0, 0.2)
  border-radius 16px
  z-index -1
  opacity 0
  visibility hidden
  @extend .trs
  @media (max-width breakpoint-md)
    position relative
    top unset
    left unset
    padding 0
    background none
    box-shadow none
    z-index 0
    border-radius 0
    color white
    min-width auto
    width calc(100% + 40px)
    margin-left -20px
    opacity 1
    visibility visible
    display none

.about__teachers-arrow
  width 64px
  height 64px
  background rgba(bunting, .5)
  border-radius 50%
  position relative
  @extend .trs
  cursor pointer
  position absolute
  top 50%
  transform translateY(-50%)
  z-index 10
  &:hover
    background carnation
  &:after
    content ''
    display block
    width 12px
    height 12px
    border 2px solid transparent
    border-right-color kournikova
    border-bottom-color kournikova
    position absolute
    top 50%
    left 48%
    transform translate(-50%, -50%) rotate(-45deg)
  &--prev
    left 40px
    transform translateY(-50%) rotate(180deg)
  &--next
    right 40px
  &.slick-disabled
    opacity 0
    visibility hidden

.about__example
  width 100%
  .about__title
    margin 0 auto 40px

.about__example-tabs
  display flex
  align-items center
  justify-content center
  margin-bottom 60px
  @media (max-width breakpoint-md)
    margin-bottom 40px

.about__example-tab
  font-family font-montserrat
  font-size 18px
  font-weight 600
  line-height 24px
  display block
  padding 13px 30px
  cursor pointer
  border-radius 50px
  @extend .trs
  border 2px solid transparent
  &:hover
    color carnation
  &.active
    border-color kournikova
    &:hover
      color white
      cursor default

.about__example-content
  overflow hidden
  @media (max-width breakpoint-md)
    &.full-width
      width calc(100% + 40px)
      margin-left -20px

.about__example-block
  opacity 0
  visibility hidden
  transform translateX(100px)
  @extend .trs
  &.trs-delay
    transition-delay .3s
  &.active
    opacity 1
    transform translateX(0px)
    visibility visible
  &.leave
    transform translateX(-100px)

.aev__list
  display flex
  justify-content space-between
  max-width 1130px
  margin 0 auto
  @media (max-width breakpoint-md)
    margin-left -20px
    width calc(100% + 40px)

.aev__block
  @media (max-width breakpoint-md)
    max-width 260px
    margin 5px 10px 0
    &.slick-current
      max-width 280px
      margin-top 0

.aev__content
  display none

.aev__img
  position relative
  cursor pointer
  &:hover
    .icon
      width 80px
      height 80px
  .icon
    fill carnation
    width 66px
    height 66px
    @extend .trs
    absolute-center()

.aev__logo
  position absolute
  left 20px
  top 20px
  max-width 80px

.aev__info
  position absolute
  left 20px
  bottom 20px

.aev__name
  font-size 18px
  font-family font-montserrat
  display block
  margin-bottom 5px

.aev__subname
  font-family font-lora
  font-size 14px
  font-style italic

.aev__remodal
  padding 0
  max-width 90%

.aev__video
  display none
  video
    max-width 100%
  &.active
    display block

.aep
  margin-top -200px
  @media (max-width breakpoint-md)
    margin-top -170px

.aep__list
  display flex
  justify-content space-between
  width 100%
  max-width 1130px
  margin 0 auto
  @media (max-width breakpoint-md)
    max-width 320px

.aep__item
  overflow hidden
  border-radius 16px
  img
    @extend .trs
  &:hover
    img
      transform scale(1.1)
      transform-origin center
  @media (max-width breakpoint-md)
    max-width 300px
    margin 0 5px
    img
      margin 0 auto
    &:hover
      img
        transform none

.aep__col
  width 100%
  max-width 400px
  &:first-child
    max-width 250px
  .aep__item+.aep__item
    margin-top 40px
  @media (max-width breakpoint-md)
    max-width 170px
    &:first-child
      max-width 130px
  .aep__item+.aep__item
    margin-top 15px

.aep__slider
  max-width 926px
  margin 0 auto
  .aep__item
    display flex
    justify-content center
    align-items center
    min-height 400px
    &:hover
      img
        transform none

[data-remodal-id="slider"]
  background transparent
  max-width 100%