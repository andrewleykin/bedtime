.contacts
  background bunting
  padding 170px 0 90px

.contacts__wrap
  max-width 1131px
  margin 0 auto
  display flex
  justify-content space-between
  position relative
  z-index 2

.contacts__teachers
  max-width 608px
  width 100%

.contacts__title
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 55px

.contacts__teacher
  display flex
  &+&
    margin-top 35px

.contacts__pic
  border-radius 50%
  overflow hidden
  margin-right 30px
  width 75px
  flex none
  align-self flex-start

.contacts__info
  display flex
  flex-direction column
  align-items flex-start

.contacts__name
  font-family font-montserrat
  font-size 18px
  font-weight 600
  position relative
  margin-bottom 15px

.contacts__link
  position absolute
  top -5px
  transform translateX(5px)
  z-index 2
  cursor pointer
  &:hover
    .icon
      fill white
  .icon
    width 12px
    height 12px
    fill rgba(white, .3)
    @extend .trs

.contacts__post
  font-family font-lora
  font-size 14px
  font-weight 400
  line-height 20px
  margin-bottom 15px
  max-width 247px
  display block

.contacts__hide
  opacity 0
  height 0
  overflow hidden
  @extend .trs
  &.active
    opacity 1
    height auto
    overflow visible
  p
    font-size 12px
    line-height 18px
    font-family font-open
  p+p
    margin-top 20px

.contacts__more
  margin-top 0
  @extend .about__review-more
  &.active
    &:before
      transform translateY(5px) rotate(-45deg)

.contacts__social
  margin-top 45px
  display flex
  align-items center

.contacts__social-title
  font-family font-lora
  font-size 18px
  display block
  margin-right 30px

.contacts__social-list
  display flex
  align-items center

.contacts__social-item
  &+&
    margin-left 25px

.contacts__social-link
  width 64px
  height 64px
  background-color kournikova
  border-radius 50%
  display flex
  align-items center
  justify-content center
  @extend .trs
  &:hover
    opacity .8
  .icon
    width 24px
    height 24px
    fill carnation

.contacts__connect
  max-width 440px
  width 100%
  margin-left 10px
  align-self flex-start
  border-radius standart-border-radius
  background-color rgba(white, .1)
  padding 34px 64px 32px

.contacts__connect-title
  text-align center
  font-family font-montserrat
  font-size 24px
  font-weight 600
  margin-bottom 20px

.contacts__connect-subtitle
  font-family font-lora
  font-size 14px
  font-weight 400
  line-height 20px
  display block
  text-align center
  max-width 260px
  margin 0 auto 30px