.faq__wrap
  padding-top 150px
  padding-bottom 100px
  @media (max-width breakpoint-md)
    padding 0
    margin-bottom 80px

.faq__title
  font-weight 600
  font-size 32px
  font-family font-montserrat
  margin-bottom 40px
  @media (max-width breakpoint-md)
    text-align center
    font-size 24px

.faq__wrap-row
  display flex
  justify-content space-between
  @media (max-width breakpoint-md)
    display block

.faq__content
  width 100%
  max-width 565px
  @media (max-width breakpoint-xl)
    margin-right 20px
  @media (max-width breakpoint-md)
    margin 0 auto 60px

.faq__tab
  border-bottom 2px solid rgba(#fff, 0.2)
  &+&
    margin-top 40px
  &.active
    .faq__tab-header:after
      transform rotate(135deg)

.faq__tab-header
  padding-bottom 30px
  cursor pointer
  position relative
  &:after
    content ''
    position absolute
    right 10px
    top 0
    transform rotate(-45deg)
    width 10px
    height 10px
    border 2px solid transparent
    border-left-color white
    border-bottom-color white
  @media (max-width breakpoint-md)
    padding-bottom 25px

.faq__tab-title
  font-weight 600
  font-size 18px
  font-family font-montserrat
  @media (max-width breakpoint-md)
    font-size 16px

.faq__tab-body
  padding-bottom 40px
  display none
  p
    font-size 14px
    line-height 24px
    &.faq__tab-effect
      font-size 12px
      line-height 14px
    b
      font-weight bold
  p+p
    margin-top 30px

.faq__tab-mark
  color carnation

.ftg
  &+&
    margin-top 30px

.ftg__title
  font-size 12px
  font-weight bold
  letter-spacing 0.1em
  text-transform uppercase
  margin-bottom 20px

.ftg__cost
  margin-bottom 15px
  display flex
  align-items flex-end

.ftg__cost-num
  font-family font-montserrat
  font-weight 600
  font-size 24px
  color kournikova
  display block
  margin-right 5px

.ftg__cost-descr
  font-size 14px

.ftg__info
  margin-bottom 25px
  display flex
  align-items flex-end

.ftg__info-block
  display flex
  align-items flex-end
  &+&
    margin-left 50px

.ftg__info-title
  font-family font-lora
  font-style italic
  font-size 14px
  color rgba(#fff, 0.5)
  display block
  margin-right 5px

.ftg__info-content
  font-size 14px

.ftg__text
  font-size 14px
  line-height 24px

.faq__warning
  margin-top 40px
  display flex
  .icon
    width 14px
    height 14px
    fill rgba(#fff, 0.5)
    margin-right 5px
    flex none
    margin-top 4px

.faq__warning-text 
  font-size 14px
  line-height 24px
  strong 
    font-weight bold

.faq__warning-link
  color kournikova
  text-decoration underline
  &:hover
    text-decoration none

.faq__review
  width 100%
  max-width 485px
  @media (max-width breakpoint-md)
    max-width 375px
    margin 0 auto

.faq__block
  max-width 100%
  padding 60px 55px
  display flex
  flex-direction column
  align-items flex-start
  background rgba(white, .1)
  border-radius standart-border-radius
  position relative
  z-index 0
  @media (max-width breakpoint-lg)
    padding 30px 22px
  @media (max-width breakpoint-md)
    background linear-gradient(225.49deg, rgba(96, 234, 201, 0.2) 3.69%, rgba(235, 175, 241, 0.2) 120.05%)
    padding 60px 47px 30px
    text-align center

.faq__review-triangle
  position absolute
  right 80px
  top 100%
  .icon
    width 105px
    height 26px
    fill white
  @media (max-width breakpoint-xl)
    right 0
  @media (max-width breakpoint-md)
    right 50%
    transform translateX(50%)

.faq__review-icon
  position absolute
  top 50px
  left 40px
  z-index -1
  .icon
    width 70px
    height 60px
    fill rgba(#182f4c, .9)
  @media (max-width breakpoint-md)
    top 30px
    left 50%
    transform translateX(-50%)
    .icon
      fill #182f4c

.faq__review-text
  font-size 18px
  font-weight 400
  line-height 30px
  @extend .trs
  &+&
    margin-top 25px
  &.hide
    height 0
    overflow hidden
    margin-top 0
  @media (max-width breakpoint-md)
    font-size 14px
    font-family font-open
    font-style normal

.faq__review-more
  font-family font-open
  font-size 14px
  font-weight 700
  line-height 36px
  display flex
  align-items center
  cursor pointer
  margin-top 30px
  &:before
    content ''
    display block
    width 10px
    height 10px
    border 2px solid transparent
    border-top-color carnation 
    border-right-color carnation
    border-radius 2px
    transform rotate(45deg)
    margin-right 10px
    @extend .trs
  &.active
    &:before
      transform translateY(2px) rotate(-45deg)
  @media (max-width breakpoint-md)
    margin 25px auto 0

.faq__author
  display flex
  align-items center
  padding-top 45px
  padding-left 60px
  @media (max-width breakpoint-md)
    flex-direction column-reverse
    justify-content center
    padding-left 0
    text-align center

.faq__author-info
  margin-right 40px
  @media (max-width breakpoint-md)
    margin-right 0
    margin-top 25px

.faq__author-name
  font-family font-montserrat
  font-size 18px
  font-weight 600
  display block
  margin-bottom 20px
  @media (max-width breakpoint-md)
    font-size 16px
    margin-bottom 15px

.faq__author-post
  font-family font-lora
  font-size 18px
  font-weight 400
  font-style italic
  @media (max-width breakpoint-md)
    font-size 14px

.faq__author-pic
  border-radius 50%
  overflow hidden
  align-self flex-start
  @media (max-width breakpoint-md)
    margin 0 auto